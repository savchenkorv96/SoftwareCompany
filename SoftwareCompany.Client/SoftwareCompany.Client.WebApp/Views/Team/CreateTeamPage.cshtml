@using SoftwareCompany.Client.Common.Entities
@using SoftwareCompany.Client.WebApp.Infrasctucture
@model SoftwareCompany.Client.WebApp.Models.TeamModel.CreateTeamModel

@{
    ViewData["Title"] = "CreateTeamPage";
}

@{
    @if (Context.Session.GetJson<Account>("account") == null)
    {
        Context.Response.Redirect("../Login");
    }
}

<h1>CreateTeamPage</h1>

<div class="container" style="width: 500px">
    <form asp-controller="Team" asp-action="CreateTeam" method="post">
        <div class="form-group">
            <label>Name: </label>
            <input asp-for="Team.Name" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label>Description:</label>
            <input asp-for="Team.Description" class="form-control" type="text">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>

