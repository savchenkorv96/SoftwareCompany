
@model SoftwareCompany.Client.WebApp.Models.EmployeeModel.CreateEmployeeModel
@using Microsoft.CodeAnalysis.CSharp
@using SoftwareCompany.Client.Common.Entities
@using SoftwareCompany.Client.Common.Enumerations
@{
    ViewData["Title"] = "CreateAccountPage";
}

<h1>Create Account Page</h1>

<div class="container" style="width: 500px">
    <form asp-controller="Employee" asp-action="CreateEmployee" method="post">
        <div class="form-group">
            <label>Account:</label>
            <select asp-for="AccountId" asp-items="@Model.Accounts" class="form-control">
            </select>
        </div>
        <div class="form-group">
            <label>Team:</label>
            <select asp-for="TeamId" asp-items="@Model.Teams" class="form-control">
                <option>Please select one</option>
            </select>
        </div>
        <div class="form-group">
            <label>Position:</label>
            <input asp-for="Employee.Position" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label>Salary:</label>
            <input asp-for="Employee.Salary" class="form-control" type="number">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>